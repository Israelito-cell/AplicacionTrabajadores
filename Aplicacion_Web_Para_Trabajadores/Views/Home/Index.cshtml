@{
    ViewData["Title"] = "Home Page";
}


@model IEnumerable<Trabajador>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trabajadores</title>

</head>
<body>
    <div class="bg-white shadow-sm p-4 rounded-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold mb-0 text-primary">Lista de Trabajadores</h2>
                <p class="text-muted mb-0">Registro general de empleados registrados</p>
            </div>
            <a asp-action="Create" class="btn btn-success px-3 py-2">
                <i class="bi bi-plus-circle me-1"></i> Nuevo trabajador
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-primary text-center align-middle">
                    <tr>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Tipo Documento</th>
                        <th>Número Documento</th>
                        <th>Sexo</th>
                        <th>Fecha Nacimiento</th>
                        <th>Foto</th>
                        <th>Dirección</th>
                        <th>Fecha de Creación</th>
                        <th style="width:150px">Acciones</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombres</td>
                            <td>@item.Apellidos</td>
                            <td>@item.TipoDocumento</td>
                            <td>@item.NumeroDocumento</td>
                            <td>@item.Sexo</td>
                            <td>@(item.FechaNacimiento?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td>
                                @if (item.Foto != null && item.Foto.Length > 0)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(item.Foto)"
                                         alt="Foto"
                                         style="width:55px;height:55px;border-radius:50%;object-fit:cover;border:1px solid #ccc;" />
                                }
                                else
                                {
                                    <div class="bg-light d-inline-flex align-items-center justify-content-center rounded-circle border"
                                         style="width:55px;height:55px;">
                                        <i class="bi bi-person text-secondary fs-4"></i>
                                    </div>
                                }
                            </td>
                            <td>@item.Direccion</td>
                            <td>@(item.FechaCreacion?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Ver">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

