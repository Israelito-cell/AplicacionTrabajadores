@model Aplicacion_Web_Para_Trabajadores.Models.Trabajador

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Separación del Trabajador
            </h2>
        </div>

        <div class="card-body">
            <h4 class="text-danger fw-bold mb-4 text-center">
                ¿Está seguro de que desea eliminar al trabajador de la empresa?
            </h4>

            <div class="text-start">
                <h4 class="mb-3">Trabajador</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nombres)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombres)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Apellidos)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellidos)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TipoDocumento)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoDocumento)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.NumeroDocumento)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.NumeroDocumento)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Sexo)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Sexo)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Foto)</dt>
                    <dd class="col-sm-9">
                        @if (Model.Foto != null && Model.Foto.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)"
                                 alt="Foto del trabajador"
                                 class="img-thumbnail"
                                 style="max-width:150px;" />
                        }
                        else
                        {
                            <img src="~/images/default.png"
                                 alt="Foto por defecto"
                                 class="img-thumbnail"
                                 style="max-width:150px;" />
                        }
                    </dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Direccion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

                    <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCreacion)</dd>
                </dl>

                <hr />

                <!-- Botones -->
                <div class="d-flex justify-content-between">
                    <!-- Volver al Index -->
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Volver
                    </a>

                    <!-- Eliminar Trabajador -->
                    <form asp-action="DeleteConfirmed" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" value="3" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill me-1"></i> Eliminar
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

